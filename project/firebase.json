{
  "hosting": {
    "public": "out",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "destination": "/posts/[post].html",
        "regex": "^/posts/([^/]+?)(?:/)?$"
      },
      {
        "destination": "/posts/[...createAndEditAPost].html",
        "regex": "^/posts/(.+?)(?:/)?$"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
