{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es5",
    "downlevelIteration": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "filesGlob": ["typings/index.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["target", "dist", "node_modules", "__tests__"],
  "typeRoots": ["./typings", "./@types", "./node_modules/@types"],
  "types": ["node", "webpack", "react", "react-dom", "reactstrap"],
  "include": ["src", "**/*.ts"],
  "compileOnSave": true
}
